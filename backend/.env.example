# Database Configuration (Neon Postgres)
# Get your connection string from: https://console.neon.tech/app/projects
# Format: postgresql://user:password@ep-xxx-xxx.region.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=postgresql://user:password@ep-xxx-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# Qdrant Configuration
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=textbook_chunks

# Claude API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# JWT Authentication Configuration
# Generate SECRET_KEY with: openssl rand -hex 32
# Or in Python: import secrets; print(secrets.token_hex(32))
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days (7 * 24 * 60 = 10080 minutes)

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_QUESTIONS_PER_HOUR=20
RATE_LIMIT_TRANSLATIONS_PER_DAY=5
RATE_LIMIT_PERSONALIZATIONS_PER_DAY=5
